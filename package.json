{
  "name": "blue-archive-story-viewer",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite --host",
    "format": "prettier --config .prettierrc.json -uw ./src/ ./CICD/ ./public/config/yaml/ *.md",
    "build:json": "eslint --config ./.eslintrc.json ./public/config/yaml/ && node ./CICD/build_json.js",
    "build": "pnpm format; pnpm build:json && vue-tsc && vite build",
    "build:github": "pnpm build; cp ./dist/index.html ./dist/404.html",
    "preview": "pnpm build:json && vite build; vite preview --host",
    "check": "eslint --config ./.eslintrc.json ./src/ ./CICD/ ./public/config/yaml/ --ext .js,.ts,.vue,.yml,.yaml && vue-tsc --noEmit"
  },
  "dependencies": {
    "@vue/compiler-sfc": "3.x",
    "axios": "1.3.2",
    "axios-retry": "3.4.0",
    "fastest-levenshtein": "1.0.16",
    "pinia": "2.0.30",
    "pinia-plugin-persistedstate": "3.0.2",
    "toastify-js": "1.12.0",
    "vue": "3.2.47",
    "vue-router": "4.1.6"
  },
  "devDependencies": {
    "@rushstack/eslint-patch": "1.2.0",
    "@trivago/prettier-plugin-sort-imports": "4.0.0",
    "@types/toastify-js": "1.11.1",
    "@typescript-eslint/eslint-plugin": "5.50.0",
    "@typescript-eslint/parser": "5.50.0",
    "@vitejs/plugin-legacy": "3.0.2",
    "@vitejs/plugin-vue": "4.0.0",
    "@vue/eslint-config-typescript": "11.0.2",
    "chalk": "5.2.0",
    "eslint": "8.33.0",
    "eslint-config-prettier": "8.6.0",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-sort-exports": "0.8.0",
    "eslint-plugin-vue": "9.9.0",
    "eslint-plugin-yaml": "0.5.0",
    "js-yaml": "4.1.0",
    "postcss": "8.4.21",
    "postcss-plugin-px2rem": "0.8.1",
    "postcss-preset-env": "8.0.1",
    "prettier": "2.8.3",
    "prettier-plugin-css-order": "1.3.0",
    "rollup-plugin-visualizer": "5.9.0",
    "sass": "1.58.0",
    "terser": "5.16.3",
    "typescript": "4.9.5",
    "vite": "4.1.1",
    "vite-plugin-compression": "0.5.1",
    "vite-plugin-pwa": "0.14.1",
    "vue-tsc": "1.0.24",
    "workbox-window": "6.5.4"
  }
}
